@model IEnumerable<ETicaretProje.Entity.Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">

        <!-- /.card -->

        <div class="card">

            <!-- /.card-header -->
            <div class="card-body">

                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Ürün Adı</th>
                            <th>Onaylı mı?</th>
                            <th>Anasayfada mı?</th>
                            <th>Popüler mi?</th>
                            <th>Kategori Adı</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                <img src="~/Content/Resimler/@item.Resim" width="75" height="50" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Isim)
                            </td>
                            <td>
                                @if (item.Onayli_mi)
                                {
                                    <label class="label label-success"><i class="fa fa-fw fa-check-square"></i>Evet</label>
                                }
                                else
                                {
                                    <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>
                                }
                            </td>
                            <td>
                                @if (item.AnaSayfada_mi)
                                {
                                    <label class="label label-success"><i class="fa fa-fw fa-check-square"></i>Evet</label>
                                }
                                else
                                {
                                    <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>
                                }
                            </td>
                            <td>
                                @if (item.OneCikarilmis_mi)
                                {
                                    <label class="label label-success"><i class="fa fa-fw fa-check-square"></i>Evet</label>
                                }
                                else
                                {
                                    <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Kategori.Isim)
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", new { id = item.Id })"><i class="fa fa-fw fa-edit"></i>Düzenle</a>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Id })"><i class="fa fa-fw fa-trash"></i>Sil</a>

                            </td>
                        </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Resim</th>
                            <th>Ürün Adı</th>
                            <th>Onaylı mı?</th>
                            <th>Anasayfada mı?</th>
                            <th>Popüler mi?</th>
                            <th>Kategori Adı</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
            <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Ürün Ekle</a>
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>



