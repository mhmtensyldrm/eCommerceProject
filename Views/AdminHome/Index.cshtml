@model ETicaretProje.Models.StateModelStyle
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@Model.UrunSayisi</h3>

                    <p>Ürün Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="/Urun/Index" class="small-box-footer">Ayrıntılar<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@Model.SiparisSayisi</h3>

                    <p>Sipariş Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/Siparis/Index" class="small-box-footer">Ayrıntılar<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@Model.OnayBekleyenSayisi</h3>

                    <p>Onay Bekleyen Siparişler</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="/Siparis/BekleyenSiparisler" class="small-box-footer">Ayrıntılar<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>@Model.TamamlananSiparisSayisi</h3>

                    <p>Tamamlanmış Siparişler</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="/Siparis/TamamlananSiparisler" class="small-box-footer">Ayrıntılar<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@Model.OnaylanmisSiparisSayisi</h3>

                    <p>Onaylanmış Siparişler</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="/Siparis/OnaylanmisSiparisler" class="small-box-footer">Ayrıntılar<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@Model.KargolananSiparisSayisi</h3>

                    <p>Kargolanmış Siparişler</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/Siparis/KargolananSiparisler" class="small-box-footer">Ayrıntılar<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>

</section>