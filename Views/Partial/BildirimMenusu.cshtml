@model IEnumerable<ETicaretProje.Entity.Order>
<li class="nav-item dropdown">
    <a class="nav-link" data-toggle="dropdown" href="#">
        <i class="far fa-bell"></i>
        <span class="badge badge-warning navbar-badge">@Model.Count()</span>
    </a>
    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
        <li class="dropdown-item dropdown-header"><strong>Bildirimler</strong>(Beklenen Siparişler)</li>
        <li>
            <ul class="menu">
                @foreach (var item in Model)
                {
                    <li>
                        <a href="/Siparis/Details/@item.Id">
                            <strong>@item.UserName</strong> Kullanıcısı siparişinin onaylanmasını bekliyor!
                        </a>
                    </li>
                }
            </ul>
        </li>
        <li class="footer">
            @if (Model.Count() > 0)
            {
                <p>Bildirimleriniz</p>
            }
            else
            {
                <span>Bildirim Yok</span>
            }
        </li>
    </ul>
</li>
