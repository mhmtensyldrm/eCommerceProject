@using ETicaretProje.Entity
@model Urun
@{
    ViewBag.Title = "ProductDetails";
}

<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            <div id="sidebar" class="span3">
                @Html.Action("Summary", "Cart")


                @Html.Action("_KategoriList", "Kategori")
                </ul>
                @Html.Action("PopulerUrunList", "Home")

                <div class="thumbnail">
                    <img src="/Magaza/themes/images/payment_methods.png" title="Bootshop Payment Methods" alt="Payments Methods">
                    <div class="caption">
                        <h5>Payment Methods</h5>
                    </div>
                </div>
            </div>
            <!-- Sidebar end=============================================== -->
            <div class="span9">
                <ul class="breadcrumb">
                    <li><a href="/Home/Index">Home</a> <span class="divider">/</span></li>
                    <li><a href="/Home/Products">Products</a> <span class="divider">/</span></li>
                    <li class="active">product Details</li>
                </ul>
                <div class="row">
                    <div id="gallery" class="span3"> <br />
                        <a href="themes/images/products/large/f1.jpg" title="Fujifilm FinePix S2950 Digital Camera">
                            <img src="~/Content/Resimler/@Model.Resim" style="width:100%" alt="Fujifilm FinePix S2950 Digital Camera">
                        </a>
                    </div>    
                    <div class="span6">
                        <ul id="productDetail" class="nav nav-tabs">
                            <li class="active"><a href="#home" data-toggle="tab">Ürün Detay</a></li>
                            
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane fade active in" id="home">
                                <h4>Ürün Bilgileri</h4>
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr class="techSpecRow"><th colspan="2">Ürün Detay</th></tr>
                                        <tr class="techSpecRow"><td class="techSpecTD1">Marka: </td><td class="techSpecTD2">@Model.Isim</td></tr>
                                        <tr class="techSpecRow"><td class="techSpecTD1">Açıklama:</td><td class="techSpecTD2">@Model.Aciklama</td></tr>
                                        <tr class="techSpecRow"><td class="techSpecTD1">Fiyat:</td><td class="techSpecTD2">@Model.Fiyat (₺)</td></tr>
                                        <tr class="techSpecRow"><td class="techSpecTD1">Stok:</td><td class="techSpecTD2">@Model.UrunAdet</td></tr>
                                        <tr class="techSpecRow"><th colspan="2">
                                            @using(Html.BeginForm("AddToCart","Cart"))
                                            { 
                                                @Html.HiddenFor(i=>i.Id)
                                            <button type="submit" class="btn btn-large btn-primary pull-right">Sepete Ekle <i class="icon-shopping-cart"></i></button>
                                            }
                                             </th></tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

