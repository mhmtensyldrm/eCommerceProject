@model ETicaretProje.Models.SiparisDetay
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            <div id="sidebar" class="span3">
                @Html.Action("Summary", "Cart")
                @Html.Action("_KategoriList", "Kategori")
                </ul>
                @Html.Action("PopulerUrunList", "Home")
            </div>
            <!-- Sidebar end=============================================== -->
            <div class="span9">

                <table class="table table-bordered">
                    <tr><th>Adres Bilgilerini Doldurunuz</th></tr>
                    <tr>
                        <td>

                            @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()



                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Kullanıcı Adı</label>
                                    <div class="controls">
                                        <div class="btn btn-success">@User.Identity.Name</div>
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Adres Başlığı</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.AdresBasligi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.AdresBasligi, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Şehir</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Sehir, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Sehir, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">İlçe</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Ilce, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Ilce, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Mahalle</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Mahalle, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Mahalle, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Sokak</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Adres, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Posta Kodu</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.PostaKodu, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PostaKodu, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <div class="controls">
                                        <button type="submit" class="btn btn-success">Kaydet</button>
                                    </div>
                                </div>
                            }


                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

